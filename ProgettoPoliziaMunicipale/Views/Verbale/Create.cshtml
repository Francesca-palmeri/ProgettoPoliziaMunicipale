@model ProgettoPoliziaMunicipale.ViewModels.VerbaleViewModel

@{
    ViewData["Title"] = "Crea Verbale";
}

<h2>Crea Verbale</h2>

<form method="post">
    <div class="form-group">
        <label for="IdAnagrafica">Trasgressore</label>
        <select asp-for="IdAnagrafica" class="form-control" asp-items="Model.Anagrafiche">
            <option value="">Seleziona un trasgressore</option>
        </select>
        <span asp-validation-for="IdAnagrafica" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="DataViolazione">Data Violazione</label>
        <input type="date" class="form-control" asp-for="DataViolazione" />
    </div>

    <div class="form-group">
        <label for="IndirizzoViolazione">Indirizzo Violazione</label>
        <input type="text" class="form-control" asp-for="IndirizzoViolazione" />
    </div>

    <div class="form-group">
        <label for="NominativoAgente">Nominativo Agente</label>
        <input type="text" class="form-control" asp-for="NominativoAgente" />
    </div>

    <div class="form-group">
        <label for="IdViolazione">Tipo di violazione</label>
        <select asp-for="IdViolazione" class="form-control" asp-items="Model.TipiViolazione">
            <option value="">Seleziona un tipo di violazione</option>
        </select>
        <span asp-validation-for="IdViolazione" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label for="Importo">Importo</label>
        <input type="number" class="form-control" asp-for="Importo" />
    </div>

    <div class="form-group">
        <label for="DecurtamentoPunti">Decurtamento Punti</label>
        <input type="number" class="form-control" asp-for="DecurtamentoPunti" />
    </div>

    <button type="submit" class="btn btn-primary">Salva Verbale</button>
</form>
